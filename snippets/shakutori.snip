    for right < $1 && ${1:{safe-condition}} {
      // change condition(right)
      ${2:{use-right}}

      right++
    }

    // query processing

    // preprocessing before preceding LEFT
    if right == left {
      right++
    } else {
      // change condition(left)
      ${3:{use-left}}
    }
  }

